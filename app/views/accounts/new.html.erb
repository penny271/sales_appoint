<div>
  <h1 class="font-bold text-4xl">Accounts#new</h1>
  <p>Find me in app/views/accounts/new.html.erb</p>
</div>

<%# ! 下記で画面全体に表示 - headerも隠れる %>
<%# <div class="min-h-screen flex items-center justify-center"> %>
<div class="flex items-center justify-center">
  <div class="max-w-md w-full p-6 bg-white rounded-lg shadow-lg">
    <div class="flex justify-center mb-8">
      <img src="https://www.emprenderconactitud.com/img/POC%20WCS%20(1).png" alt="Logo" class="w-30 h-20">
    </div>
    <h1 class="text-2xl font-semibold text-center text-gray-500 mt-8 mb-6">Registro</h1>

    <%# post create => accounts_path %>
    <%= form_with model: @account_form, url: accounts_path do |f| %>

      <div class="mb-4">
        <%= f.label :name, "name y name_kana", class: "block mb-2 text-sm text-gray-600" %>
        <%= f.text_field :name, class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-cyan-500", required: true %>
      </div>

      <div class="mb-4">
        <%= f.label :name_kana, "name_kana", class: "block mb-2 text-sm text-gray-600" %>
        <%= f.text_field :name_kana, class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-cyan-500", required: true %>
      </div>

      <div class="mb-4">
        <%= f.label :email, "Correo electrónico", class: "block mb-2 text-sm text-gray-600" %>
        <%= f.email_field :email, class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-cyan-500", required: true %>
      </div>

      <div class="mb-4">
        <%= f.label :password, "password", class: "block mb-2 text-sm text-gray-600" %>
        <%= f.password_field :password, class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-cyan-500", required: true %>
      </div>

      <div class="mb-4">
        <%= f.label :description, "description", class: "block mb-2 text-sm text-gray-600" %>
        <%= f.text_field :description, class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-cyan-500", required: true %>
      </div>

      <div class="mb-4">
        <%= f.label :gender, "gender", class: "block mb-2 text-sm text-gray-600" %>
        <%= f.text_field :gender, class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-cyan-500", required: true %>
      </div>

      <%# ! password 確認 %>
      <div class="mb-4">
        <%= f.label :password, "password", class: "block mb-2 text-sm text-gray-600" %>
        <%= f.password_field :password, class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-cyan-500", required: true %>
      </div>

      <div class="mb-6">
        <%= f.label :confirm_password, "Repetir contraseña", class: "block mb-2 text-sm text-gray-600" %>
        <%= f.password_field :confirm_password, class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-cyan-500", required: true %>
      </div>

      <%= f.submit "Registro", class: "w-32 bg-gradient-to-r from-cyan-400 to-cyan-600 text-white py-2 rounded-lg mx-auto block focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-cyan-500 mb-2" %>

    <% end %>
    <div class="text-center">
      <p class="text-sm">¿Ya tienes una cuenta? <a href="#" class="text-cyan-600">Inicia sesión</a></p>
    </div>
    <p class="text-xs text-gray-600 text-center mt-8">&copy; 2023 WCS LAT</p>
  </div>
</div>
